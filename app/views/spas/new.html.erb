<h1>New Spa Form</h1>
<%= form_for @spa do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :address1, "Address 1" %>
    <%= f.text_field :address1 %>
    <br>
    <%= f.label :address2, "Address 2 (optional)" %>
    <%= f.text_field :address2 %>
    <br>
    <%= f.label :city %>
    <%= f.text_field :city %>
    <br>
    <%= f.label :state, "State Abbreviation" %>
    <%= f.text_field :state %>
    <br>
    <%= f.label :zip %>
    <%= f.text_field :zip %>
    <br>
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number %>
    <br>
    <%= f.submit %>
<% end %>